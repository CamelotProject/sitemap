<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true"
                  autoconfigure="true"
                  public="false">
            <bind key="$providers" type="tagged_iterator" tag="camelot.sitemap.provider"/>
        </defaults>

        <service id="Camelot\Sitemap\Sitemap"/>

        <!-- Builder -->
        <service id="Camelot\Sitemap\Builder\Builder"/>

        <!-- Commands -->
        <service id="Camelot\Sitemap\Command\SitemapGenerateCommand">
            <tag name="console.command"/>
        </service>

        <service id="Camelot\Sitemap\Command\SitemapValidateXmlCommand">
            <tag name="console.command"/>
        </service>

        <!-- Controllers -->
        <service id="Camelot\Sitemap\Controller\SitemapController">
            <tag name="controller.service_arguments"/>
        </service>

        <!-- Config -->
        <service id="Camelot\Sitemap\DefaultValues">
            <factory method="none"/>
        </service>
        <service id="Camelot\Sitemap\Config"/>

        <!-- Providers -->
        <service id="Camelot\Sitemap\Provider\SymfonyRouteProvider"/>
    </services>
</container>
